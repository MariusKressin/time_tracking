<h1 class="text-xl mb-6">Edit Profile</h1>

<h2 class="text-lg mb-2">Personal Info</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-2">
    <%= f.label :email, class: 'block' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded outline-none' %>
  </div>

  <div class="field mb-2">
    <%= f.label :fname, 'First Name', class: 'block' %>
    <%= f.text_field :fname, autofocus: true, autocomplete: "first-name", class: 'rounded outline-none' %>
  </div>

  <div class="field mb-2">
    <%= f.label :lname, 'Last Name', class: 'block' %>
    <%= f.text_field :lname, autofocus: true, autocomplete: "last-name", class: 'rounded outline-none' %>
  </div>

<% end %>

<div class="w-96 bg-slate-400 h-[1px] my-4"></div>

<h2 class="text-lg mb-2">Password</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

	<div class="field mb-2">
    <%= f.label :current_password, 'Current Password', class: 'text-red-600 block' %>
    <%= f.password_field :current_password, autofocus: true, autocomplete: "current-password", class: 'rounded outline-none' %>
	</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="actions">
    <%= f.submit "Save", class: "py-2 px-4 bg-#{current_user.accent_color}-800 rounded text-white w-max mr-2" %>
  </div>
<% end %>

<%= link_to "Cancel", :back, class: "mt-2 rounded px-3 py-2 border border-#{current_user.accent_color}-800 text-#{current_user.accent_color}-800 inline-block" %>
