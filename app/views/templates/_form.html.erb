<div class="text-xl grow mb-4"><%= @template.persisted? ? 'Edit' : 'New'%> Template</div>

<div class="px-3">
	<%= form_with model: @template, local: true do |f| %>
		<%= render partial: 'components/input_and_label', locals: {
				f: f,
				label: 'Title',
				field: :title,
		} %>
		<%= render partial: 'components/textarea_and_label', locals: {
				f: f,
				label: 'Description',
				field: :description,
		} %>
		<div class="flex">
			<div class="py-2 px-4 bg-<%= current_user.accent_color %>-800 rounded text-white w-max">
				<% if @template.persisted? %>
					<%= f.submit "Save" %>
				<% else %>
					<%= f.submit "Create" %>
				<% end %>
			</div>
			<div class="py-2 px-4 border border-<%= current_user.accent_color %>-800 rounded w-max ml-2 text-<%= current_user.accent_color %>-800">
				<% if @template.persisted? %>
					<%= link_to "Cancel", @template %>
				<% else %>
					<a href="/templates">Cancel</a>
				<% end %>
			</div>
		</div>
	<% end %>
</div>
